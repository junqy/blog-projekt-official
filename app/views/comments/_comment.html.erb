<div class="box">
  <article class="media-box-comment">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.user.email %></strong>
        </p>
        <div class="comment-content">
          <%= simple_format(comment.content).html_safe %>
        </div>
      </div>
    </div>
    <% if current_user == comment.user %>
      <%= link_to [@blog, comment.post, comment], method: :delete, class: "trash-btn btn btn-danger mb-3 mt-3 float-right", data: { confirm: 'Are you sure?' } do %>
        <i class='fas fa-trash'></i>
      <% end %>
    <% end %>
  </article>
</div>