<%= link_to blog_posts_path, class: "btn btn-secondary mb-3 mt-3" do %>
  <i class='fas fa-arrow-left'></i>
<% end %>
<% if current_user == @blog.user %>
  <%= link_to edit_blog_post_path, class: "btn btn-primary mb-3 mt-3 float-right" do %>
    <i class='fas fa-edit'></i>
  <% end %>
  <%= link_to blog_post_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger mb-3 mt-3 mr-2 float-right" do %>
    <i class='fas fa-trash'></i>
  <% end %>
<% end %>
<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h1><%= @post.title %></h1>
        <%= @post.content %>
      </div>
    </div>
  </div>
</div>

<div class="row mb-3 mt-3">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h4 class = "subtitle is-5"><strong><%=@post.comments.count %></strong> Comments</h4>
        <hr />
        <%= render @post.comments %>
        <div class = "comment-form">
          <hr />
          <h4 class = "subtitle is-3">Leave a reply</h4>
          <%= render 'comments/form' %>
        </div>
      </div>
    </div>
  </div>
</div>